@model IEnumerable<HappyFarmProjectWebAdmin.Models.EmployeeModelView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="search-box">
    <div class="search-box__find">
        <input type="text" name="search" id="search" class="form-control" style="height:35px; width: 100%" placeholder="Masukkan kata yang dicari" />
        <input type="button" name="search-btn" value="Cari" id="search-btn" class="btn btn-primary" style="margin-left: 5px" />
    </div>
    @Html.ActionLink("Tambah Karyawan", "Add", "SuperAdminEmployee", null, new { @class = "btn btn-primary" })
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Nama
            </th>
            <th>
                Nomor Telepon
            </th>
            <th>
                Email
            </th>
            <th>
                Alamat
            </th>
            <th>
                Jenis Kelamin
            </th>
            <th>
                Hak Akses
            </th>
            <th>
                Wilayah
            </th>
            <th>
                Aksi
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (item.Gender == "M")
                {
                    @Html.Raw("Laki-Laki")
                }
                else
                {
                    @Html.Raw("Perempuan")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>

@* Error Message *@
@if(TempData["ErrMessage"] != null) {
<div class="data-err">
    @TempData["ErrMessage"]
</div>
}

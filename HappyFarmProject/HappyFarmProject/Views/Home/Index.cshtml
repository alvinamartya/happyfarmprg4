
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Product Bread Crumb *@
@section products_breadcrumb{
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i>Home</li>
            </ul>
        </div>
    </div>
}

@* Show All Promoes *@
@section showPromos {
    <a href="@Url.Action("Index", "Promo")" class="pull-right btn btn-success" style="margin-right: 10px;">Lihat Semua Promo</a>
}